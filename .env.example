# Metanalyst Agent Configuration

# LLM Configuration (Anthropic as default)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
GOOGLE_API_KEY=your_google_api_key_here

# Search Configuration (Tavily as default)
TAVILY_API_KEY=your_tavily_api_key_here

# Database Configuration (PostgreSQL)
POSTGRES_URL=postgresql://postgres:password@localhost:5432/metanalyst
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=metanalyst
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# System Configuration
METANALYST_LOG_LEVEL=INFO
METANALYST_MAX_CONCURRENT_AGENTS=5
METANALYST_REQUIRE_HUMAN_APPROVAL=true
METANALYST_AUTO_APPROVE_LOW_RISK=false

# LLM Provider Selection
METANALYST_LLM_PROVIDER=anthropic
METANALYST_LLM_MODEL_NAME=claude-3-5-sonnet-latest
METANALYST_LLM_TEMPERATURE=0.1
METANALYST_LLM_MAX_TOKENS=4096

# Tavily Configuration
METANALYST_TAVILY_MAX_RESULTS=10
METANALYST_TAVILY_SEARCH_DEPTH=advanced

# Vector Store Configuration
METANALYST_VECTOR_STORE_EMBEDDING_MODEL=text-embedding-3-small
METANALYST_VECTOR_STORE_CHUNK_SIZE=1000
METANALYST_VECTOR_STORE_CHUNK_OVERLAP=100